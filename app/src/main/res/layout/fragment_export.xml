<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context="net.jackhallam.videocreator.pages.ExportFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_save_to_device"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_margin="24dp"
            android:contentDescription="@string/save_to_device"
            android:src="@drawable/ic_save_white_48dp" />

        <ImageView
            android:id="@+id/image_upload"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_margin="24dp"
            android:contentDescription="@string/upload"
            android:src="@drawable/ic_file_upload_white_48dp" />
    </LinearLayout>
</FrameLayout>
